<% @pending_approvals.each do |approval| %>
  <div class="homepage-block col-md-3">
    <h4><%= approval.user.full_name %></h4>
    <p><strong>Date Submitted</strong>: <%= approval.date %></p>
    <p><strong>Rationale</strong>: <%= truncate approval.rationale %></p>
    <div class="row">
      <div class="col-md-6 column">
        <%= link_to "Approve", root_path, class: "btn btn-success btn-block" %>
      </div>
      <div class="col-md-6 column">
        <%= link_to "Review", root_path, class: "btn btn-warning btn-block" %>
      </div>
    </div>
  </div>
<% end %>
